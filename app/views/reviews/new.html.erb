<div class="container">
  <h1>What do you think about this pubcrawl?</h1>
  <h3 style="color: white">Please write a fee words</h3>
  <hr style="color: white">
  <%= simple_form_for [@event, @review] do |f| %>
  <%= f.input :comment, label_html: { class: "white-label" } %>
  <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}}, label_html: { class: "white-label" } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true }, label_html: { class: "white-label" } %>
  <%= f.submit "Send your review", class: "btn btn-outline-light" %>
  <% end %>
  <hr style="color: white">
  <%= link_to "return to the event", event_path(@event), class: 'btn btn-dark' %>
</div>
