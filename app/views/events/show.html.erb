<div class="container">
  <h1><%= @event.pubcrawl.name%></h1>
  <h4><%= @event.date%></h1>
  <hr>
  <p>Members</p>
  <ul>
    <% @event.users.each do |user| %>
      <li><%= user.email %></li>
    <%end%>
  </ul>
  <hr>
  <div>
    <p>Last reviews :</p>
    <ul>
      <% @event.reviews.each do |review|%>
      <li>
        <p><strong> <%= review.rating %> / 10 - </strong><%= review.comment %></p>
      </li>
      <% end %>
    </ul>
    <hr>
    <%= link_to "Give a review", new_event_review_path(@event), class:"btn btn-dark" %>
  </div>
</div>
